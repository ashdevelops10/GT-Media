{
  "name": "gt-media-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "deploy:vercel": "vercel --prod",
    "studio": "sanity start --host 0.0.0.0",
    "sanity:deploy": "sanity deploy",
    "typecheck": "tsc --noEmit",
    "ci:lh": "pnpm dlx @lhci/cli@0.13.0 autorun --config=./scripts/ci/lighthouse-ci-config.js",
    "ci:full-check": "pnpm lint && pnpm typecheck && pnpm test --if-present && pnpm build && pnpm run ci:lh"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.0",
    "@sanity/client": "^7.13.1",
    "@sanity/image-url": "^1.0.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "gsap": "^3.13.0",
    "lenis": "^1.3.15",
    "lottie-web": "^5.13.0",
    "next": "16.0.5",
    "next-sanity": "^11.6.10",
    "next-seo": "^6.6.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sharp": "^0.33.0",
    "tailwind-merge": "^3.4.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@sanity/types": "^4.19.0",
    "@types/gsap": "^3.0.0",
    "@types/node": "^22.0.0",
    "@types/node-fetch": "^2.6.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-config-next": "16.0.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.47",
    "prettier": "^3.4.0",
    "sanity": "^4.19.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
